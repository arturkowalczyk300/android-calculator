<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/llEquation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvExpression"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="36sp"
            tools:text="2*2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLabelEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="="
            android:textSize="40sp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textSize="36sp"
            tools:text="4"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">
        <!-- first row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionRemoveAllButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="AC"
                android:text="AC" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionRemoveOneCharacterButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="DEL"
                android:text="DEL" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="%"
                android:text="%" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="/"
                android:text="/" />
        </LinearLayout>

        <!-- second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="7"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="8"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="9"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="x"
                android:text="x" />
        </LinearLayout>

        <!-- third row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="4"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="5"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="6"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="-"
                android:text="-" />
        </LinearLayout>

        <!-- fourth row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="1"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="2"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="3"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="+"
                android:text="+" />
        </LinearLayout>

        <!-- fifth row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="+/-"
                android:text="+/-" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="0"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/numberButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="."
                android:text="." />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/actionEqualButtonStyle"
                android:onClick="buttonOnClickListener"
                android:tag="="
                android:text="=" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>